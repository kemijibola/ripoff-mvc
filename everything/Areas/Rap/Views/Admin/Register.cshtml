@model everything.Areas.Rap.ViewModels.RegisterAdminViewModel

@{
    ViewBag.Title = "Register Admin";
}

<script src="~/jss/jquery.js"></script>
<link href="@Url.Content("~/Content/jquery-ui.css")" rel="stylesheet" type="text/css" />
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<div class="row">
@using (Html.BeginForm("Register", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "regForm", name = "regForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-lg-12">

        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li class="active"><span>Register Admin</span></li>
                </ol>

                <h1>Register Admin</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="main-box">
                    <header class="main-box-header clearfix">
                        <h2>Admin Biodata</h2>
                    </header>

                    <div class="main-box-body clearfix">
                        
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                @Html.TextBoxFor(m => m.Email, new { @placeholder = "you@example.com", @class = "form-control", @title = "You'll use this when you want to log in and if you ever need to reset your password.", @autofocus = "autofocus", @Required = "Required" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Display Name</label>
                                @Html.TextBoxFor(m => m.NameExtension, new { @placeholder = "FirstName_LastName", @class = "form-control", @title = "What display name do you want?", @Required = "Required" })
                                @Html.ValidationMessageFor(m => m.NameExtension, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleTextarea">Password</label>
                                @Html.PasswordFor(m => m.Password, new { @placeholder = "********", @class = "form-control", @title = "Enter a combination of at least six numbers, letters and punctuation marks (like $ and #)", @Required = "Required" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="exampleTooltip">Confirm Password</label>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "********", @class = "form-control", @title = "Please re-enter your password.", @Required = "Required" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <input type="submit" value="Register Admin" name="operation" id="process" class="btn btn-success">
                                </div>
                            </div>
                            <div id="divProcessing">
                                <p>Registering, please wait . . . <img src="~/images/ajax-loader.gif"></p>
                            </div>
               
                    </div>
                </div>
            </div>
            
        </div>

    </div>
}
</div>


<script>

    $(document).ready(function () {
        $("#divProcessing").hide();

        });

    $("#regForm").submit(function (event) {

        var isValid = $('#regForm').valid();
            if (isValid) {
                $("#divProcessing").show();
                $('#process').hide();
             }
    });

</script>