
@model everything.Areas.Rap.ViewModels.LawFirmViewModel

<style>
    .dl-horizontal dt {
        white-space: normal;
    }
</style>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h5 class="modal-title" id="myModalLabel">Firm details</h5>
</div>

<div class="modal-body">

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-12">
                <dl class="dl-horizontal">
                    <dt>Firm name:</dt>
                    <dd>
                        @Html.DisplayFor(model => model.FirmName)
                    </dd>
                    <dt>Firm owner:</dt>
                    <dd>
                        @Html.DisplayFor(model => model.HolderName)
                    </dd>
                    <dt>Phone number:</dt>
                    <dd>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                    <dt>Contact person:</dt>
                    <dd>
                        @Html.DisplayFor(model => model.ContactPerson)
                    </dd>
                    <dt>Contact phone:</dt>
                    <dd>
                        @Html.DisplayFor(model => model.ContactNumber)
                    </dd>
                    <dt>Email:</dt>
                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt>Address:</dt>
                    <dd>
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                    <dt>City:</dt>
                    <dd>
                        @Html.DisplayFor(model => model.City)
                    </dd>
                    <dt>State:</dt>
                    <dd>
                        @Html.DisplayFor(model => model.State)
                    </dd>
                    <dt>Country:</dt>
                    <dd>
                        @Html.DisplayFor(model => model.Country)
                    </dd>
                </dl>
            </div>
        </div>

    </div>

</div>

<div class="modal-footer">
    <button class="btn" data-dismiss="modal" name="op" id="cancelProcess">Cancel</button>

</div>
