@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Oops! Error Encountered";
}
<style>
    .error-404 {
  margin: 0 auto;
  text-align: center;
}
.error-404 .error-code {
  bottom: 60%;
  color: #4686CC;
  font-size: 96px;
  line-height: 100px;
  font-weight: bold;
}
.error-404 .error-desc {
  font-size: 12px;
  color: #647788;
}
.error-404 .m-b-10 {
  margin-bottom: 10px!important;
}
.error-404 .m-b-20 {
  margin-bottom: 20px!important;
}
.error-404 .m-t-20 {
  margin-top: 20px!important;
}
</style>

<div class="error-404">
    <div class="error-code m-b-10 m-t-20">404 <i class="fa fa-warning"></i></div>
    <h2 class="font-bold">Page Not Found.</h2>

    <div class="error-desc">
        We couldn't find the page you requested. We did, however, find this program. <br />
         Browse our @Html.ActionLink("latest compalints", "Index", "LatestReports", routeValues: null, htmlAttributes: new { @class = "btn-login" })<br>          
         Browse our @Html.ActionLink("consumer question for consumers", "Index", "Question", routeValues: null, htmlAttributes: new { @class = "btn-login" })<br>        
        If you feel something is missing that should be here, @Html.ActionLink("let us know", "FeedBack", "Maintenance", routeValues: null, htmlAttributes: new { @class = "btn-login" })<br>
    </div>
</div>

