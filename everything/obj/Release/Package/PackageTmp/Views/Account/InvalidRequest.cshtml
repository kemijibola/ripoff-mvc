@{
    ViewBag.Title = "Invalid request";
}

<section id="inner-banner">

    <div class="container">

        <h1>@ViewBag.Title</h1>

    </div>

</section>
<section class="signup-section">

    <div class="container">

        <div class="holder">
            <div class="form-group ">
                <div class="col-md-12">
                    <p class="text-danger">
                        Invalid Request
                    </p>
                </div>
            </div>
            <div class="form-group ">
                <div class="col-md-12">
                    <p>
                        We are unable to process your request at the moment!
                    </p>
                </div>
            </div>
            <div class="form-group ">
                <div class="col-md-12">

                    @Html.ActionLink("Continue", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-default" })

                </div>
            </div>
        </div>

    </div>

</section>