@model everything.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change password";
}

<section id="inner-banner">

    <div class="container">

        <h1>@ViewBag.Title</h1>

    </div>

</section>

<section class="signup-section">

    <div class="container">

        <div class="holder">
            <span class="text-danger">
                @ViewBag.Password
            </span>
            @using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group ">
                    <div class="col-md-12">
                        @Html.PasswordFor(m => m.OldPassword, new { @placeholder = "Current password", @class = "form-control"})
                        @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-md-12">
                        @Html.PasswordFor(m => m.NewPassword, new { @placeholder = "New password", @class = "form-control"})
                        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-md-12">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm new password", @class = "form-control"})
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Change Password">
                    </div>
                </div>

            }

        </div>

    </div>

</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}